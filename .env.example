# Environment variables for Volunteer Signup Platform
# Copy this file to .env and fill in your values

# ============================================================================
# DATABASE
# ============================================================================
# For local development with Docker Compose:
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/volunteer_signup?schema=public"

# For production (update with your actual credentials):
# DATABASE_URL="postgresql://username:password@localhost:5432/volunteer_signup?schema=public"

# ============================================================================
# AWS CONFIGURATION
# ============================================================================
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-access-key-id"
AWS_SECRET_ACCESS_KEY="your-secret-access-key"

# S3 Bucket for JSON mirrors
S3_BUCKET_NAME="volunteer-signups-bucket"
S3_BUCKET_REGION="us-east-1"

# SQS Queue for background jobs
SQS_QUEUE_URL="https://sqs.us-east-1.amazonaws.com/123456789012/volunteer-jobs"
SQS_DLQ_URL="https://sqs.us-east-1.amazonaws.com/123456789012/volunteer-jobs-dlq"

# SES Email Configuration
SES_FROM_EMAIL="noreply@yourdomain.com"
SES_FROM_NAME="Temple Volunteering"
SES_REGION="us-east-1"

# ============================================================================
# AWS COGNITO (Admin Authentication)
# ============================================================================
COGNITO_USER_POOL_ID="us-east-1_ABC123XYZ"
COGNITO_CLIENT_ID="your-cognito-app-client-id"
COGNITO_REGION="us-east-1"

# For Next.js API routes (admin session management)
NEXTAUTH_SECRET="your-random-secret-at-least-32-characters-long"
NEXTAUTH_URL="http://localhost:3000"

# ============================================================================
# GOOGLE SHEETS API
# ============================================================================
# Service Account Credentials
GOOGLE_SERVICE_ACCOUNT_EMAIL="volunteer-sync@your-project.iam.gserviceaccount.com"
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-private-key-here\n-----END PRIVATE KEY-----"
GOOGLE_PROJECT_ID="your-google-cloud-project-id"

# Drive folder for storing roster spreadsheets
GOOGLE_DRIVE_FOLDER_ID="1abc123def456ghi789jkl"

# ============================================================================
# APPLICATION
# ============================================================================
# Your public domain (used in emails and calendar links)
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Timezone for events (default)
DEFAULT_TIMEZONE="America/New_York"

# ============================================================================
# WORKER CONFIGURATION
# ============================================================================
WORKER_POLL_INTERVAL_MS="5000"
WORKER_MAX_RETRIES="5"
WORKER_RETRY_BACKOFF_MS="1000"

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_SIGNUP_PER_MINUTE="10"
RATE_LIMIT_CALENDAR_PER_MINUTE="60"

# ============================================================================
# DEVELOPMENT / OPTIONAL
# ============================================================================
NODE_ENV="development"
LOG_LEVEL="info"

# Disable email sending in development (logs instead)
DISABLE_EMAIL_SENDING="false"

# Disable Sheets sync in development
DISABLE_SHEETS_SYNC="false"
