    "@prisma/client": "^5.7.1",
    "@tailwindcss/forms": "^0.5.7",
    "amazon-cognito-identity-js": "^6.3.7",
    "bcryptjs": "^2.4.3",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "google-auth-library": "^9.4.1",
    "googleapis": "^129.0.0",
    "ical-generator": "^7.0.0",
